<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/getFoodInfoWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>


        <com.imangazaliev.circlemenu.CircleMenu
            android:id="@+id/shareMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:layout_gravity="top|right"
            android:layout_marginTop="-90dp"
            android:layout_marginRight="-50dp"
            app:hintsEnabled="true">
            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/starfood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                app:colorNormal="#00FFFFFF"
                app:colorPressed="#00FFFFFF"
                app:hintText="收藏/取消收藏" />
            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/shareWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                app:colorNormal="#00FFFFFF"
                app:colorPressed="#00FFFFFF"
                app:hintText="分享到微信"
                app:icon="@drawable/wechat" />
            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/starfood2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                app:colorNormal="#00FFFFFF"
                app:colorPressed="#00FFFFFF"
                app:hintText="收藏/取消收藏"
                app:icon="@drawable/like" />

        </com.imangazaliev.circlemenu.CircleMenu>


</FrameLayout>
